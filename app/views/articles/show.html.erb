<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @article.banner_url %>'), url('https://source.unsplash.com/1200x700/?article');">
  <div class="container">
    <h1><%= @article.title %></h1>
  </div>
</div>

<div class="pt-30 container">
  <div class="cards">
    <% @article.comments.each do |comment| %>
      <%= render "articles/article_card", comment: comment %>
    <% end %>
  </div>
  <div class="pt-30 row justify-content-center">
    <div class="col-12 col-md-4">
      <h4 class="text-center">Add a comment</h4>
      <%= simple_form_for [ @article, @comment ] do |f| %>
        <%= f.input :name, placeholder: "Inspiration" %>
        <%#= f.input :image_url, placeholder: "https://some_nice_image_found_on_google.jpg" %>
        <div class="form-actions">
          <%= f.submit "Add", class: "btn btn-flat" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
